<Window x:Class="GamesCharacters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesCharacters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="LBX_ComputerGameData" HorizontalAlignment="Left" Height="281" Margin="60,80,0,0" VerticalAlignment="Top" Width="161" SelectionChanged="LBX_ComputerGameData_SelectionChanged"/>
        <Image x:Name="IMG_Character" HorizontalAlignment="Left" Height="173" Margin="470,81,0,0" VerticalAlignment="Top" Width="119"/>
        <ListBox x:Name="LBX_CharacterData" HorizontalAlignment="Left" Height="281" Margin="268,80,0,0" VerticalAlignment="Top" Width="159" SelectionChanged="LBX_CharacterData_SelectionChanged"/>
        <Label Content="Games" HorizontalAlignment="Left" Margin="60,53,0,0" VerticalAlignment="Top" Width="161"/>
        <Label Content="Characters" HorizontalAlignment="Left" Margin="268,53,0,0" VerticalAlignment="Top" Width="159"/>
    </Grid>
</Window>
